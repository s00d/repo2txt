{
	"name": "repo2txt",
	"version": "1.0.0",
	"description": "Interactive console utility to select files and folders with checkboxes and generate markdown for LLM context",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"bin": {
		"repo2txt": "./dist/main.js",
		"r2t": "./dist/main.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/s00d/repo2txt.git"
	},
	"bugs": {
		"url": "https://github.com/s00d/repo2txt/issues"
	},
	"homepage": "https://github.com/s00d/repo2txt#readme",
	"scripts": {
		"build": "vite build",
		"typecheck": "tsc --noEmit",
		"prebuild": "pnpm typecheck",
		"start": "node dist/main.js",
		"prepublishOnly": "pnpm run build",
		"dev": "tsx src/main.ts",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write ."
	},
	"keywords": [
		"markdown",
		"file-tree",
		"cli",
		"terminal-ui",
		"llm",
		"code-context",
		"gitignore",
		"file-selection",
		"codebase-export"
	],
	"author": "s00d",
	"license": "MIT",
	"dependencies": {
		"blessed": "^0.1.81",
		"blessed-contrib": "^4.11.0",
		"chalk": "^5.6.2",
		"citty": "^0.1.6",
		"clipboardy": "^5.0.0",
		"gpt-tokenizer": "^3.2.0",
		"ignore": "^7.0.5",
		"istextorbinary": "^9.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/blessed": "^0.1.25",
		"@types/node": "^20.19.24",
		"@vitest/ui": "^4.0.5",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vite": "^7.1.12",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.5"
	}
}
