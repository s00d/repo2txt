{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true
	},
  "include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
